#!/usr/bin/env bash

screen -ls |awk '/\([DA][et]tached\)/ {print $1}' |tr '[.]' '[ ]' \
  | while read pid screen; do
      echo "pid='$pid', screen='$screen'"
      ps -e -o ppid,tty |sed 1d |awk "\$1 == $pid {print \$2}" | while read pty; do
        ps -o command= -t /dev/$pty \
          |sed "s/^/$screen: /"
      done
    done
